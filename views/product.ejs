<%-include('./includes/header.ejs') %>

<%-include('./includes/nav.ejs') %>

<div class="container mx-auto">
          <div class="row ">

            <% if(product) { %>

                <div class="col-md-12 ">
                  <div style="width:30rem;margin: 0 auto;" class="card text-white bg-dark">
                      <img src=<%= product.imageUrl %> class="card-img-top" alt="Image ">
                      <div class="card-body text-center">
                        <h2 class="card-title"> <%= product.name%> </h2>
                        <h5 class="card-title">
                          Rs.<%= product.price%>
                          
                          <span style="text-decoration:line-through; color:red;" >Rs.<%= product.price + 0.1 * product.price %></span> </h5>
                        <p class="card-text"><%= product.description%></p>
                        
                        <% if(isLoggedIn){ %>
                          <div class="row">
                            <div class="col-md-12">
                              <form action="/add-to-cart" method="post">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                                <input type="hidden" name="id" value="<%= product._id %>">
                                <button type="submit" class="btn text-white btn-outline-secondary">Add To Cart</button>
                                </form>
                            </div>
                          </div>
                          <% } %>
                      </div>
                    </div>
                </div>

            <% }else { %>
              <h1>No Product Found !!</h1>
              <% } %>


          </div>
</div>

<%-include('./includes/footer.ejs') %>